<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
   <id>packaging</id>
   <formats>
      <format>zip</format>
   </formats>
   <includeBaseDirectory>false</includeBaseDirectory>
   <fileSets>
      <fileSet>
         <directory>${project.build.directory}</directory>
         <outputDirectory>PThemeTool</outputDirectory>
         <includes>
            <include>${project.build.finalName}.jar</include>
            <include>${project.build.finalName}-sources.jar</include>
            <include>${project.build.finalName}-javadoc.jar</include>
         </includes>
      </fileSet>
      <fileSet>
         <directory>src/main/java</directory>
         <outputDirectory>PThemeTool/source</outputDirectory>
      </fileSet>
      <fileSet>
         <directory>target/apidocs</directory>
         <outputDirectory>PThemeTool/web/reference</outputDirectory>
      </fileSet>
      <fileSet>
         <directory>target/generated-sources</directory>
         <outputDirectory>PThemeTool/web</outputDirectory>
         <includes>
            <include>stylesheet.css</include>
            <include>index.html</include>
         </includes>
      </fileSet>
   </fileSets>
   <files>
      <file>
         <source>${project.build.directory}/${project.build.finalName}.jar</source>
         <outputDirectory>PThemeTool/tool</outputDirectory>
         <destName>${project.artifactId}.jar</destName>
      </file>
      <file>
         <source>target/generated-sources/tool.properties</source>
         <outputDirectory>PThemeTool</outputDirectory>
      </file>
   </files>
</assembly>
